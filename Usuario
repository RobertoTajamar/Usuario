        [Required(ErrorMessage ="El campo contrase침a es obligatorio")]
        [RegularExpression("[0-9]*",ErrorMessage = "Solo se permite numeros")]
        public string Contrase침a { get; set; }

        [Range(18,90, ErrorMessage ="Solo se puede registrar gente mayor de 18 a침os")]
